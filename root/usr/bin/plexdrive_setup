#!/usr/bin/with-contenv bash

printf "\n\n\n==============================================================\n"
if [ -f "/config/config.json" ] || [ -f "/config/token.json" ]; then
  echo "Plexdrive has already been set up. Remove /config/config.json and /config/token.json and run setup again."
else
  echo "Setup Plexdrive"
  printf "==============================================================\n\n\n"

  mongo="--mongo-database=plexdrive --mongo-host=localhost"

  plexdrive ${mongo} --config=/config --temp=/chunks --uid=${PUID:-911} --gid=${PGID:-911} -o allow_other /data ${RUN_ARRAY[@]}
fi
